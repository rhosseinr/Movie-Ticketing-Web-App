@model IEnumerable<AspNetCoreTodo.Models.Reservation>

@{
    ViewData["Title"] = "Admin-List of all reservations";
}

<div class="container">
    <div class="row">
        <div class="col-sm-12">

            <div><button type="button" class="btn btn-success float-right --white"><a style="color:white"
asp-action="Create">Create New</a></button>
                <h3 class="mt-4 mb-4">List of all reservations</h3>

            </div>

            <table class="table table-striped table-hover">
                <thead class="thead-dark">
                    <tr>
                        <th>
                            @Html.DisplayNameFor(model => model.Uid)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Mid)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Tnumbers)
                        </th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.Uid)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Mid)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Tnumbers)
                            </td>
                            <td>
                                <a class="btn btn-primary" asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                                <a class="btn btn-info" asp-action="Details" asp-route-id="@item.Id">Details</a> |
                                <a class="btn btn-danger" asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
