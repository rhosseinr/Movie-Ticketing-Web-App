@model AspNetCoreTodo.Models.Reservation

@{
    ViewData["Title"] = "Create Reservation";
}
<div class="container">

<h4 class="mt-4">Create new reservation</h4>
<hr />

<div class="row">
    <div class="col-md-12">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Uid" class="control-label">User GUID</label>
                <input asp-for="Uid" class="form-control" />
                <span asp-validation-for="Uid" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Mid" class="control-label">Movie ID</label>
                <input asp-for="Mid" class="form-control" />
                <span asp-validation-for="Mid" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Tnumbers" class="control-label">Number of Tickets</label>
                <input asp-for="Tnumbers" class="form-control" />
                <span asp-validation-for="Tnumbers" class="text-danger"></span>
            </div>
            <hr />
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" /> 
                <span> | </span>
                <span> <a class="btn btn-outline-secondary"asp-action="Index">Back to List</a></span>
            </div>
        </form>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
