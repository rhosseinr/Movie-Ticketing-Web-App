@model AspNetCoreTodo.Models.Reservation

@{
    ViewData["Title"] = "Edit-Reservation";
}

<div class="container">

<h4 class="mt-4">Edit reservation</h4>

<hr />
<div class="row">
    <div class="col-md-12">
<div class="row">
    <div class="col-md-12">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="Uid" class="control-label">User GUID</label>
                <input asp-for="Uid" class="form-control" />
                <span asp-validation-for="Uid" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Mid" class="control-label">Movie ID number</label>
                <input asp-for="Mid" class="form-control" />
                <span asp-validation-for="Mid" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Tnumbers" class="control-label">number of tickets</label>
                <input asp-for="Tnumbers" class="form-control" />
                <span asp-validation-for="Tnumbers" class="text-danger"></span>
            </div>
            <hr />
            <div class="form-group mt-5">
                <input type="submit" value="Save" class="btn btn-primary" />
                <span> | </span><a class="btn btn-outline-secondary" asp-action="Index">Back to List</a>
            </div>
        </form>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
