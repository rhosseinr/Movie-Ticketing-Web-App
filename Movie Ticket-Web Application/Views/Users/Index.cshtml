@model IEnumerable<AspNetCoreTodo.Models.Users>

@{
    ViewData["Title"] = "Index";
}


<div class="container">
    <div class="row">
        <div class="col-sm-12">
            <div>
                <button type="button" class="btn btn-success float-right --white"><a style="color:white"asp-action="Create">Create New</a></button>
                <h3 class="mt-4 mb-4">List of users</h3>
            </div>
            <hr />

            <table class="table table-striped table-hover">
                <thead class="thead-dark">
                    <tr>
                        <th>
                            Username
                        </th>
                        <th>
                            Name
                        </th>
                        <th>
                            Lastname
                        </th>
                        <th>
                            Avatar
                        </th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.UserName)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Name)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.LastName)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.AvatarimgUrl)
                            </td>
                            <td>
                                <a class="btn btn-primary" asp-action="Edit" asp-route-id="@item.UserId">Edit</a> |
                                <a class="btn btn-info" asp-action="Details" asp-route-id="@item.UserId">Details</a> |
                                <a class="btn btn-danger" asp-action="Delete" asp-route-id="@item.UserId">Delete</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>