@model AspNetCoreTodo.Models.Movie

@{
    ViewData["Title"] = "Create-Movie Ticketing Web App-ComIT";
}



<div class="container">

<h4 class="mt-4">Add new movie</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Title" class="control-label"></label>
                <input asp-for="Title" class="form-control" />
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TotalCapacity" class="control-label"></label>
                <input asp-for="TotalCapacity" class="form-control" />
                <span asp-validation-for="TotalCapacity" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="BookedCapacity" class="control-label"></label>
                <input asp-for="BookedCapacity" class="form-control" />
                <span asp-validation-for="BookedCapacity" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="imgUrl" class="control-label"></label>
                <input asp-for="imgUrl" class="form-control" />
                <span asp-validation-for="imgUrl" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PlotDsc" class="control-label"></label>
                <input asp-for="PlotDsc" class="form-control" />
                <span asp-validation-for="PlotDsc" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="FullPlotDsc" class="control-label"></label>
                <input asp-for="FullPlotDsc" class="form-control" />
                <span asp-validation-for="FullPlotDsc" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" /> 
                <span> | </span>
                <span> <a class="btn btn-outline-secondary"asp-action="Index">Back to List</a></span>
            </div>
        </form>
    </div>
</div>


</div>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
